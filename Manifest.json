{
  "manifest_version": 3,
  "name": "Smart Code Helper",
  "version": "1.0.0",
  "description": "AI-powered helper that extracts code from webpages and gets improvements from OpenAI.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "smart_code_helper_run": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Extract code and send to AI"
    }
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Smart Code Helper"
  }
}